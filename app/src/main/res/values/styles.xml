<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!--Setting Theme for pre-lollipop -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <!--this properties set for Toolbar-->
    <!--setting overlay theme and secondaryColor of Toolbar-->
    <style name="myThemeForToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#fff</item>

    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/app_body_text_1</item>
        <item name="colorControlNormal">@color/app_body_text_2</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
